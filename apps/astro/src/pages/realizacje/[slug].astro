---
export const prerender = true

import Layout from '@/src/layouts/Layout.astro'
import sanityFetch from '@/utils/sanity.fetch'
import metadataFetch from '@/utils/metadata.fetch'
import Breadcrumbs from '@/components/ui/Breadcrumbs.astro'
import Image, { ImageDataQuery, type ImageDataProps } from '@/components/ui/Image'

export const slugPrefix = '/realizacje/'

export async function getStaticPaths() {
  const collection = await sanityFetch<{ slug: string }[]>({
    query: `
      *[_type == 'Project_Collection'][] {
        "slug": slug.current,
      }
    `,
  })
  return collection?.map(({ slug }) => ({ params: { slug: slug.replace(slugPrefix, '') } }))
}

const { slug } = Astro.params

const page = await sanityFetch<{
  name: string
  img: ImageDataProps
}>({
  query: `
    *[_type == 'Project_Collection' && slug.current == $slug][0] {
      name,
      ${ImageDataQuery('img')}
    }
  `,
  params: { slug: `${slugPrefix}${slug}` },
})
if (!page) return Astro.rewrite('/404')

const metadata = await metadataFetch('Project_Collection', `${slugPrefix}${slug}`)
---

<Layout {...metadata}>
  <Breadcrumbs
    data={[
      { name: 'Realizacje', path: '/realizacje' },
      { name: page.name, path: `/realizacje/${slug}` },
    ]}
  />
  <h1>{page.name}</h1>
  <Image {...page.img} sizes="100vw" priority={true} />
</Layout>
